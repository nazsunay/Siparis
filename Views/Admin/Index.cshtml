@model List<Product>
@{
    Layout = "_AdminLayout";
}

<h2>Ürün listesi</h2>
<a href="/Admin/ProductAdd" class="btn btn-success">Ürün Ekle</a>
<table class="table" >
    <thead>
        <tr>
            <th scope="col" width="40%">Ürün İsmi</th>
            <th scope="col" width="20%">Ürün Fiyat</th>
            <th scope="col" width="20%">Ürün Stock</th>
            <th scope="col" width="20%">Giriş Tarihi</th>
            <th scope="col" width="20%">#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Price</td>
                <td>@category.Stock</td>
                <td>@category.DateCreated.ToString("dd.MM.yyyy HH:mm")</td>
               
                <td>
                    <a href="/admin/ProductUpdate/@category.Id" class="btn btn-primary">Düzenle</a>
                    <a href="/admin/ProductDelete/@category.Id" onclick="return confirm('Emin misin?')" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }

    </tbody>
</table>