@model List<Product>

<div class="container px-4 py-5" id="custom-cards">
    <h2 class="pb-2 border-bottom">Kategori Listesi</h2>

    <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg" style="background-image: url('@product.ImgUrl');">
                    <div class="d-flex flex-column h-100 p-5 pb-3 text-shadow-1">
                        <h3 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold">@product.CategoryName</h3>
                        <p class="mb-4">@product.Description</p>
                        <ul class="d-flex list-unstyled mt-auto">
                            
                                
                                    <li >
                                        <a href="/home/categorydetail/@product.Id">
                                            <img src="/uploads/@product.ImgUrl" alt="ürün" width="32" height="32" class="rounded-circle border border-white">
                                            @product.CategoryName
                                        </a>
                                    </li>
                                
                            

                            <li class="d-flex align-items-center me-3">
                                <svg class="bi me-2" width="1em" height="1em"><use xlink:href="#geo-fill"></use></svg>
                                <small></small>
                            </li>
                            <li class="d-flex align-items-center">
                                <svg class="bi me-2" width="1em" height="1em"><use xlink:href="#calendar3"></use></svg>
                                <small></small>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
