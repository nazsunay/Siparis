@model List<Product>
<style>
    .card {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
    }

    .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover; /* Resmi alanı dolduracak şekilde keserek sığdırır */
    }

    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex-grow: 1;
    }

    .card-title, .card-text {
        text-align: center;
    }

    .btn-primary {
        align-self: center;
        margin-top: auto;
    }

    .row > .col-md-4 {
        display: flex;
        align-items: stretch;
    }

    .img-container {
        overflow: hidden;
        max-height: 200px; /* Adjust the height based on your design */
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f8f9fa; /* Light grey background to match Bootstrap */
    }

        

    .card-body {
        display: flex;
        flex-direction: column;
    }

        .card-body .card-title {
            font-size: 1.25rem;
            margin-bottom: 0.5rem;
        }

        .card-body .card-text {
            margin-bottom: 0.75rem;
        }

    .img-container {
        max-width: 70%;
        max-height: 200px; /* Resimlerin maksimum yüksekliği */
        overflow: hidden; /* Resmin taşan kısımlarını gizler */
        transition: transform 0.3s ease-in-out;
    }

        .img-container img {
            width: 70%;
            height: auto; /* Resmi orantılı olarak küçültür */
            object-fit: cover; /* Resmi, belirlenen alana sığacak şekilde keser */
            transform: scale(1.05);
        }

</style>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Product List</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <div class="container py-4">
        <div class="bg-light-emphasis p-5 rounded">
            <h1 class="display-3">Hoşgeldiniz!</h1>
            <p class="lead">Sayfamıza kayıt olun ve benzersiz ürünlerimizin keyfini çıkartın.</p>
            <hr class="my-4">
            <p>% 100 Garantili ürünlerimizi sizlere sunmaktan büyük bir keyif duymaktayız.</p>
            <p class="lead">
                <a class="btn btn-primary btn-lg" href="/Login/Index" role="button">Alışverişe Başla</a>
            </p>
        </div>
    </div>

    <div class="container">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-4 d-flex align-items-stretch">
                    <div class="card w-100">
                        <div class="img-container">
                            <img src="/uploads/@product.ImgUrl" class="card-img-top" alt="@product.Name">
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text mt-auto"><strong>Fiyat:</strong> @product.Price.ToString("C")</p>
                            <p class="card-text"><small class="text-muted">Tarih: @product.DateCreated.ToString("g")</small></p>
                            <a href="/home/details/@product.Id" class="btn btn-primary mt-3">Ürün</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

